{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Azure": "Information",
        "Duende": "Warning",
        "IdentityModel": "Warning",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore.Authentication": "Debug",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "withProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "ApplicationName": "IdentityServerUi"
    },
    "WriteTo": [
      {
        "Name": "Console"
      }
    ]
  },

  "ConnectionStrings": {
    "DefaultConnection": "Data Source=IdentityServer.db;"
  }
}